{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    //    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    //    "isolatedModules": true,
    "declaration": true,
    "typeRoots": ["./dist/index.d.ts", "node_modules/@types"],
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false, // Зменшує строгість перевірок типів
    "noImplicitAny": false, // Дозволяє змінним мати неявний тип 'any'
    "isolatedModules": false // Може допомогти з файлами, які викликають помилки про глобальні скрипти

  },
  "include": ["src", "./index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
